<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <g:FormPanel ui:field="form" method="POST">
        <g:HorizontalPanel>
            <g:VerticalPanel spacing="10">
                <g:HorizontalPanel>
                    <g:Label text="ID:" ui:field="idLabel" width="100px"/>
                    <g:TextBox name="id" ui:field="idText"  width="300px"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Caption:" width="100px"/>
                    <g:TextBox name="caption" ui:field="captionText"  width="300px"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Owner:" width="100px"/>
                    <g:TextBox ui:field="ownerList" width="200px"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Assigned:" width="100px"/>
                    <g:TextBox ui:field="assignedList" width="200px"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Status:" width="100px"/>
                    <g:ValueListBox ui:field="statusList" width="200px"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Label text="Descriprion:" width="100px"/>
                    <g:TextBox name="description" ui:field="descriptionText"  width="300px"/>
                </g:HorizontalPanel>
                <g:HorizontalPanel>
                    <g:Button ui:field="saveButton">Сохранить</g:Button>
                    <g:Label text="" width="100px"/>
                    <g:Button ui:field="closeButton">Закрыть</g:Button>
                </g:HorizontalPanel>
            </g:VerticalPanel>
        </g:HorizontalPanel>
    </g:FormPanel>
</ui:UiBinder>